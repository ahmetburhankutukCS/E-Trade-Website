
@{
    ViewBag.Title = "Add Category";
}

    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-heading">
                    <div class="main-text h2">
                        Add Category Page
                    </div>
                    <div class="block-controls">
                        <a href="/Kategori/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>
                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <form action="/Kategori/Add" method="post" role="form">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Category Name:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Type a Category Name" name="CategoryName">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Category Definition:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Type definition of the Category" name="CategoryDefinition">
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
