
@{
    ViewBag.Title = "Product Detail";
}

@using FoodOrderingSystem.Models

@model Food

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Products
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Urun/AddProduct" class="btn btn-success rounded">New Product</a>

                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Food Name</th>
                                <th>Food Definition</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Total Price</th>
                                <th>Amount</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.FoodName</td>
                                <td>@Model.FoodDefinition</td>
                                @if (Model.Category == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td><span class="label label-info">@Model.Category.CategoryName</span></td>
                                }
                                <td>@Model.Price</td>
                                <td>@Model.TotalPrice</td>
                                @if (Model.Amount > 0)
                                {
                                    <td><span class="label-success">@Model.Amount</span></td>
                                }
                                else
                                {
                                    <td><span class="label-danger">No Amount</span></td>
                                }
                                <td><a href="/Urun/RemoveProduct/@Model.FoodID" class="btn btn-danger rounded">Remove</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
